<div class="container">
  <aside>
    <div class="top">
      <div class="logo">
        <%= link_to root_path do %>
          <%= image_tag "logo.png", class: "img" %>
        <% end %>
        <h2>Lighthouse Blog</h2>
      </div>
  </aside>
  <main>
    <div class="top">
      <h1>Articles</h1>
      <button id="menu-btn">
        <%= link_to "New Article", new_article_path, class: 'btn btn-primary'%>
      </button>
    </div>
    <h4>
    Our blog has <%= Article.public_count %> articles and counting!
    </h4>
    <div class="articles">
      <ul>
        <% @articles.each do |article| %>
        <% unless article.archived? %>
        <li>
          <%= link_to article.title, article %>
        </li>
        <% end %>
        <% end %>
      </ul>
    </div>
  </main>
</div>
